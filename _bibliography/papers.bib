	publisher = {Springer Berlin Heidelberg},
	author = {Mouchet, Mathilde and Gourrier, Aurélien and Rupin, Fabienne and Raum, Kay and Peyrin, Françoise and Saïed, Amena and Laugier, Pascal},
	editor = {Magjarevic, Ratko and Van Toi, Vo and Khoa, Truong Quang Dang},
	year = {2010},
