@incollection{magjarevic_cortical_2010,
	address = {Berlin, Heidelberg},
	title = {Cortical Bone Microelasticity Assessed with Scanning Acoustic Microscopy: Relationship to Nanostructural Characteristics across a Human Osteon},
	volume = {27},
	isbn = {978-3-642-12019-0 978-3-642-12020-6},
